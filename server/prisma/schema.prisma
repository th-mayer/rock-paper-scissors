// learn more about it in the docs: https://pris.ly/d/prisma-schema

// DONT MODIFY
generator client {
  provider = "prisma-client-js"
}

// DONT MODIFY
datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  name      String
  password  String
}

model Item {
  id          Int     @id @default(autoincrement())
  name        String  
  description String
  effect      String    
}

model UserItem {
  userId    Int
  itemId    Int

  @@id([userId, itemId])
}